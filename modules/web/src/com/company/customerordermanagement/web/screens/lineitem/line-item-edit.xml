<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://lineItemEdit.caption"
        focusComponent="form"
        messagesPack="com.company.customerordermanagement.web.screens.lineitem">
    <data>
        <instance id="lineItemDc"
                  class="com.company.customerordermanagement.entity.LineItem">
            <view extends="_local">
                <property name="product" view="_minimal">
                    <property name="name"/>
                </property>
            </view>
            <loader/>
        </instance>
        <collection id="productsDc" class="com.company.customerordermanagement.entity.Product" view="_minimal">
            <loader id="productsDl">
                <query>
                    <![CDATA[select e from customerordermanagement_Product e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="lineItemDc">
            <column width="350px">
                <lookupPickerField id="productField" optionsContainer="productsDc" property="product">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </lookupPickerField>
                <currencyField id="priceField" property="price"/>
                <textField id="quantityField" property="quantity"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
